<!DOCTYPE html>
<html lang="en">
    <%- include('../../admin-layouts/top-header') %>
    <body class="nav-md">
        <div class="container body">
            <div class="main_container">
				<!-- top navigation -->
				<%- include('../../admin-layouts/header') %>
				<!-- /top navigation -->

				<!-- <%- include('../../admin-layouts/left-panel') %>
				 -->
				
				<!-- page content -->
            	<div class="right_col" role="main">
            
                	<div class="row">
                		<div class="col-md-12 col-sm-12 ">
                    		<div class="x_panel">
                    			<div class="x_title">
                        			<h2>Department</h2>
									<ul class="nav navbar-right panel_toolbox">
										<li><a href="/admin/masters/company/add" class="btn btn-primary">Add Company</a></li>
									</ul>
                        			<div class="clearfix"></div>
                    			</div>

                    			<div class="x_content">
                        			<div class="row">
                            			<div class="col-sm-12">
                                			<div class="card-box table-responsive">
                       
                        						<table id="datatable-fixed-header" class="table table-striped table-bordered" style="width:100%">
													<thead>
														<tr>
															<th>Name</th>
															<th>Position</th>
															<th>Office</th>
															<th>Age</th>
															<th>Start date</th>
															<th>Salary</th>
															<th>Action</th>
														</tr>
													</thead>


														<tbody>
															<% company.forEach(function(comp){
																console.log("compansssy");
															    console.log(comp);

																%>
																<tr>
																	<td><%= comp.company_name %></td>
																	<td><%= comp.company_type %></td>
																	<td><%= comp.company_name %></td>
																	<td><%= comp.company_description %></td>
																	<td><%= comp.company_description %></td>
																	<td><%= comp.company_description %></td>
																	<td><a href="/admin/masters/company/edit/<%= comp.id %>">Edit</a></td>
																</tr>
															<% }); %>
															
														</tbody>
												</table>
											</div>
											<br>
											<center>
											<ul class="pagination modal-4">
												<% var reamin = totalPages * pageSize;  if (reamin > pageSize) { %>  
												<% if (currentPage > 1) { %>
												<li><a href="?page=<%= currentPage - 1 %>" class="prev"><i class="fa fa-chevron-left"></i> Previous</a></li>
												<% } %>
												<% for (let i = 1; i <= totalPages; i++) { %>
												<% if(i <= 6) { %>
												<li><a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a></li>
												<% } else if(currentPage == i){ %>
													<li><a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a></li>
													
												<% break;  } } %>

												<% if(currentPage >= 5) { if(currentPage != totalPages) { %>
												<% if(currentPage != totalPages - 1) { %>
												<li><a href="javascript:void(0)" class="">...</a></li>
												<% } %>
												<li><a href="?page=<%= totalPages %>"><%= totalPages %></a></li>

												<%  } } %>

											
												<% if (currentPage < totalPages) { %>
												<li><a href="?page=<%= currentPage + 1 %>" class="next"> Next  <i class="fa fa-chevron-right"></i></a></li> 
												<% } %>

												<% } %>
											
											</ul>
											</center>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
            
				</div>
				<!-- /page content -->

				<!-- footer content -->
				<%- include('../../admin-layouts/footer') %>
				<!-- /footer content -->
			</div>
				
		</div>
    </body>
</html>