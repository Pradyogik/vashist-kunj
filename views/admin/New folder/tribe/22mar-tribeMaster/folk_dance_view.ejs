    <script type="text/javascript">
 
      function Validate()
      {
        
        var error = '';
        var tribeName   = $('#tribeName').val();
        var danceName   = $('#danceName').val();
        var character   = $('#character').val();
        var singer      = $('#singer').val();
        var genre       = $('#genre').val();
        var duration    = $("#duration").val();
        var lyrics      = $('#lyrics').val();
        var region      = $('#region').val();
        var social      = $('#social').val();
        var historical  = $('#historical').val();

        if(tribeName == '' || tribeName == null)
        {
          error+='Tribe Name Name is required\n';
        }
        if(danceName == '' || danceName == null)
        {
          error+='Dance Name is required\n';
        }
        if(character == '' || character == null)
        {
          error+='Character is required\n';
        }
        if(danceType == '' || danceType == null)
        {
          error+='Dance Type is required\n';
        }
        if(coustumes == '' || coustumes == null)
        {
          error+='Coustumes is required\n';
        }
        if(music == '' || music == null)
        {
          error+='Music is required\n';
        }
        if(instrument == '' || instrument == null)
        {
          error+='Instrument is required\n';
        }
        if(region == '' || region == null)
        {
          error+='Region is required\n';
        }
        if(choreography == '' || choreography == null)
        {
          error+='Choreography is required\n';
        } 
        if(social == '' || social == null)
        {
          error+='Social is required\n';
        }
        if(historical == '' || historical == null)
        {
          error+='Historical is required\n';
        }
        
        if(error != '')
        {
         swal({
          title: "Error",
          text: ""+error,
          type: "error",
          showCancelButton: true,
          confirmButtonClass: 'btn-danger',
        });
       }
       else
       {
         $('#addFolKDance').submit();
       }
     }
  </script>

