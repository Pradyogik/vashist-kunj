                                     <div class="col-sm-10 mt">
                                        <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe - > Folk Dance</legend>
                                            <form  data-toggle="validator" method="post" name="add_folk_dance"  id="addFolKDance"  action="/admin/tribe/master/folkdance">
                                              <div class="col-sm-4">
                                                <label class="form-label required">Tribe(s) :</label>
                                                <select class="form-control form-select"  name="tribe_name" id="tribeName">
                                                  <option value="">Select Tribe</option>
                                                  <% for (let s of servicelist)
                                                          {
                                                        
                                                          %>
                                                          <option value="<%= s.id %>" >
                                                          <%= s.tribe_name %> 
                                                          </option>
                                                          <% } %>
                                                </select>
                                                </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Dance Name</label>
                                                    <input class="form-control" type="text" name="dance_name" id="danceName" placeholder="Enter Dance Name">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Character:</label>
                                                    <input class="form-control" type="text" name="character" id="character" placeholder="Enter Character">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Dance Type</label>
                                                    <input class="form-control" type="text" name="dance_type" id="danceType" placeholder="Enter Dance Type">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Region:</label>
                                                    <input class="form-control" type="text" name="region" id="region" placeholder="Enter Region Or Cultual Origin">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Coustumes</label>
                                                    <input class="form-control" type="text" name="coustumes" id="coustumes" placeholder="Enter Coustumes or attire associated">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Music:</label>
                                                    <input class="form-control" type="text" name="music" id="music" placeholder="Enter Music Accompanying the Dance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Instrument:</label>
                                                    <input class="form-control" type="text" name="instrument" id="instrument" placeholder="Enter Instrument">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Steps:</label>
                                                    <input class="form-control" type="text" name="choreography" id="choreography" placeholder="Enter Steps Or choreography">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Social:</label>
                                                    <input class="form-control" type="text" name="social" id="social" placeholder="Enter Social Or Cultural Significance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Historical:</label>
                                                    <input class="form-control" type="text" name="historical" id="historical" placeholder="Enter Historical/religious Context and Significance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label for="status" class="control-label">Is Folk</label>
                                                    <div class="radio_inline">
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="1" id="toast" required="" checked>
                                                            <label for="toast">Yes</label>
                                                        </div>
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="0" id="boost" required="">
                                                            <label for="boost">No</label>
                                                        </div>
                                                    </div>
                                                  </div>
                                                <div class="form-group pull-right mt">
                                                    <button type="submit" class="btn btn-cap m-r-5" onclick =" return Validate();">Submit</button>
                                                    <button type="submit" class="btn btn-warning">Cancel</button>
                                                </div>
                                            </form>
                                        </fieldset>
                                        <div class="mt"> 
                                          <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe - > Folk Dance List</legend>
                                          <div class="table-responsive">
                                            <table id="myTable" class="table card-table table-vcenter text-nowrap datatable">
                                              <thead>
                                                <tr>
                                                  <th>S No.</th>
                                                  <th>Tribe Name</th>
                                                  <th>Danc name</th>
                                                  <th>Character</th>
                                                  <th>Dance Type</th>
                                                  <th>Region</th>
                                                  <th>Costumes</th>
                                                  <th>Music</th>
                                                  <th>Instrument</th>
                                                  <th>Steps</th>
                                                  <th>Soccial</th>
                                                  <th>Historical</th>
                                                  <th>Action</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                                  <%  if(list.length>0)
                                                  { 
