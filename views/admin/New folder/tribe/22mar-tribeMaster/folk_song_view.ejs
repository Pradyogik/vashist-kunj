                                     <div class="col-sm-2 mt">
                                        <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe- ADA</legend>
                                            <table class="table table-hover table-striped">
                                                
                                                <tbody>
                                                    <tr><td><a href="/admin/tribe/master/folkmusic/1/1"> Folk Music <i class="ti-angle-double-right"></i> </a></td></tr>
                                                    <tr class="active-tab"><td><a href="/admin/tribe/master/folksong/1/1"> Folk Songs <i class="ti-angle-double-right"></i> </a></td></tr>
