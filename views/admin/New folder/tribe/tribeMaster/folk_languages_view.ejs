<!DOCTYPE html>
<html lang="en">
    
    <%- include('../../admin-layouts/top-header') %>
    <body class="hold-transition fixed sidebar-mini">
        <!-- Preloader -->
        <div class="preloader"></div>
        <!-- Site wrapper -->
        <div class="wrapper">
            <%- include('../../admin-layouts/header') %>
            
            <div class="content-wrapper">
				 
				<!-- page content -->
            	<div class="right_col" role="main">
					<div class="row">
            <% if(error.length>0){ %>
              <script>new Toasteur("top-right", 3000).error(" <%= error %>", 'Error!');</script>
           <% } %>
        
           <% if(success.length>0){ %>
              <script>new Toasteur("top-right", 3000).success(" <%= success %>", 'Success!');</script>
           <% } %>
                        <div class="col-sm-12">
							<div class="clearfix"></div>
                            <div class="panel panel-bd lobidrag">
                                
                                <div class="panel-body">
                                    <div class="col-sm-12">
                                        <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe- ADA</legend>
                                            <dl>
                                                <dt>Tribe Name</dt>
                                                <dd>A description list is perfect for defining terms.</dd>
                                                <dt>Tribe Description</dt>
                                                <dd>Vestibulum id ligula porta felis euismod semper eget lacinia odio sem nec elit.</dd>
                                                <dd>Donec id elit non mi porta gravida at eget metus.</dd>
                                                <dt>Tribe About</dt>
                                                <dd>Etiam porta sem malesuada magna mollis euismod.</dd>
                                            </dl>
                                        </fieldset>
                                    </div>

                                    <div class="col-sm-2 mt">
                                      <%- include('../../admin-layouts/tribe-left-panel') %> 
                                    </div>

                                     <div class="col-sm-10 mt">
                                        <fieldset class="the-fieldset">
                                        
                                          <%
                                          tribe_name                         = tribe[0].tribe_name? tribe[0].tribe_name : '';
                                          language                           = tribe[0].language_name ? tribe[0].language_name : '';
                                          scripts                            = tribe[0].scripts_used ? tribe[0].scripts_used : '';
                                          examples                           = tribe[0].examples_excerpts ? tribe[0].examples_excerpts : ''; 
                                          culturalorigin                     = tribe[0].region_cultural_origin ? tribe[0].region_cultural_origin : '';
                                          historical                         = tribe[0].historical_religious_significance ? tribe[0].historical_religious_significance : '';
                                          cultural                           = tribe[0].cultural_significance ? tribe[0].cultural_significance : '';
                                          %>
                                            <legend class="the-legend">Tribe - > Languages</legend>
                                            <form data-toggle="validator" method="post" name="add_folk_Languages"  id="addfolkLanguages"  enctype="multipart/form-data"  action="/admin/tribe/master/traditions/languages/<%=tribeId%>/<%=languageId%>">
                                                <div class="col-sm-4">
                                                  <label class="form-label required">Tribe(s) :</label>
                                                  <select class="form-control form-select"  name="tribe_name" id="tribeName">
                                                    <option value="<%= tribe[0].tribe_id %>"><%= tribe[0].tribe_name %></option>
                                                  </select>
                                                  </div>
                                                
                                            
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">language Name:</label>
                                                    <input class="form-control" name="language_name" id="language_name" value="<%=language%>" placeholder="Enter language Name">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">scripts Used:</label>
                                                    <input class="form-control" type="text" name="scripts_used" id="scripts_used" value="<%=scripts%>" placeholder="Enter scripts Used">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">examples Excerpts:</label>
                                                    <input class="form-control" type="text" name="examples_excerpts" id="examples_excerpts" value="<%=examples%>" placeholder="Enter examples Excerpts">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Region:</label>
                                                    <input class="form-control" type="text" name="region_cultural_origin" id="region_cultural_origin" value="<%=culturalorigin%>" placeholder="Enter region Cultural Origin">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Historical:</label>
                                                    <input class="form-control" type="text" name="historical_religious_significance" id="historical_religious_significance" value="<%=historical%>" placeholder="Enter historical Religious Significance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Regioncultural Significance:</label>
                                                    <input class="form-control" type="text" name="regioncultural_significance" id="regioncultural_significance" value="<%=historical%>" placeholder="Enter Regioncultural Significance Or Cultual Origin">
                                                  </div>
                                                  
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Cultural Significance:</label>
                                                    <input class="form-control" type="text" name="cultural_significance" id="cultural_significance" value="<%=cultural%>" placeholder="Enter Title">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label for="status" class="control-label">Is Folk</label>
                                                    <div class="radio_inline">
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="1" id="toast" required="" checked>
                                                            <label for="toast">Yes</label>
                                                        </div>
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="0" id="boost" required="">
                                                            <label for="boost">No</label>
                                                        </div>
                                                    </div>
                                                  </div>
                                                  
                                                    <div class="form-group pull-right pt-2 mt">
                                                        <button type="submit" class="btn btn-cap m-r-5" onclick ="return Validate();">Submit</button>
                                                        <button type="submit" class="btn btn-warning">Cancel</button>
                                                    </div>
                                            </form>
                                        </fieldset>
                                       <div class="mt"> 
                                        <fieldset class="the-fieldset">
                                          <legend class="the-legend">Tribe - > Languages List</legend>
                                        <div class="table-responsive">
                                          <table id="myTable" class="table card-table table-vcenter text-nowrap datatable">
                                            <thead>
                                              <tr>
                                                <th>S No.</th>
                                                <th>Tribe Name</th>
                                                <th>Languages Name</th>
                                                <th>Scripts Used</th>
                                                <th>Examples Excerpts</th>
                                                <th>Region Cultural</th>
                                                <th>Historical Religious</th>
                                                <th>Cultural Significance</th>
                                                <th>Image</th>
                                                <th>Music</th>
                                                <th>Video</th>
                                                <th>Action</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                                <%  if(language.length>0)
                                                {
                                                   console.log("languagesadasd");
                                                   console.log(language);
                                                  var number= 1;
                                                  var del = '';
                                                  for (let l of language)

                                                  
                                                    { %>
                                                      <tr>
                                                        <td><%= number %></td>
                                                        <td><%= l.tribe_name %></td>
                                                        <td><%= l.language_name %></td>
                                                        <td><%= l.scripts_used %></td>
                                                        <td><%= l.examples_excerpts %></td>
                                                        <td><%= l.region_cultural_origin %></td>
                                                        <td><%= l.historical_religious_significance %></td>
                                                        <td><%= l.cultural_significance %></td>
                                                        <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.languge_id %>/image"><span class="label label-pill label-info-outline m-r-15"><%= l.image %></span></a></td>
                                                        <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.languge_id %>/audio"><span class="label label-pill label-warning-outline m-r-15"><%= l.audio %></span></a></td>
                                                        <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.languge_id %>/video"><span class="label label-pill label-danger-outline m-r-15"><%= l.video %></span></a></td>
                                                        <td>
                                                          <a href="/admin/tribe/master/traditions/languages/<%= l.tribe_id %>/<%= l.languge_id %>" class="btn btn-xs btn-success" aria-label=""  title="Edit Item">
                                                            <i class="fa fa-edit"></i>
                                                          </a>
                                                          <a onclick="return checkConfirm('<%= l.languge_id  %>')"  class="btn btn-xs btn-danger" aria-label="" title="Delete Item">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        </td>
                                                      </tr>
                
                                                    <% number++; } 
                                                }  %>
                                             
                                            </tbody>
                                          </table>
                                        </div>
                                      </fieldset>
                                     </div>
                                     </div>
                                     
                                </div>
							    		
                            </div>
                        </div>
                    </div>
				</div>
				<!-- /page content -->
               
            </div>
            <!-- footer content -->
				<%- include('../../admin-layouts/footer') %>
			<!-- /footer content -->
        </div> <!-- ./wrapper -->
    </body>
    <script type="text/javascript">
        function Validate() {
          var error = '';
          var tribeName = $('#tribeName').val();
          var language_name = $('#language_name').val();
          var scripts_used = $('#scripts_used').val();
          var examples_excerpts = $('#examples_excerpts').val();
          var region_cultural_origin = $('#region_cultural_origin').val();
          var historical_religious_significance = $("#historical_religious_significance").val();
          var regioncultural_significance = $('#regioncultural_significance').val();
          var cultural_significance = $('#cultural_significance').val();
      
          if (tribeName == '' || tribeName == null) {
            error += 'Tribe Name is required\n';
          }
          if (language_name == '' || language_name == null) {
            error += 'Language Name is required\n';
          }
          if (scripts_used == '' || scripts_used == null) {
            error += 'Scripts Used is required\n';
          }
          if (examples_excerpts == '' || examples_excerpts == null) {
            error += 'Examples Excerpts is required\n';
          }
          if (region_cultural_origin == '' || region_cultural_origin == null) {
            error += 'Region Cultural Origin is required\n';
          }
          if (historical_religious_significance == '' || historical_religious_significance == null) {
            error += 'Historical Religious Significance is required\n';
          }
          if (regioncultural_significance == '' || regioncultural_significance == null) {
            error += 'Region Cultural Significance is required\n';
          }
          if (cultural_significance == '' || cultural_significance == null) {
            error += 'Cultural Significance is required\n';
          }
      
          if (error != '') {
            swal({
              title: "Error",
              text: "" + error,
              type: "error",
              showCancelButton: true,
              confirmButtonClass: 'btn-danger',
            });
          } else {
            document.forms["add_folk_Languages"].submit();
          }
        }
function checkConfirm(id) {
    
    var rowId  = id;
    var y = confirm('Are you sure');
    if(y)
    {
        $.ajax({
        type: 'get', // Type of request to be send, called as method
        url: '/admin/tribe/master/traditionsDelete/languages/'+rowId, //  Url to which the request is send
        dataType: 'json',
        success: function (responce) { // A function to be called if request succeeds.
          if(responce == 1){
              new Toasteur("top-right", 3000).success("Selected row Deleted Suceesfully", 'Success');
              $("#rowid_"+rowId).hide();
              setTimeout(function(){
                  window.location.reload(1);
              }, 3000);
          }else{
              new Toasteur("top-right", 3000).error("Somthing Went wrong Please try again", 'Error!');
              setTimeout(function(){
                  window.location.reload(1);
              }, 3000);
          }
          }
        });
    }

}           
      </script>

</html>