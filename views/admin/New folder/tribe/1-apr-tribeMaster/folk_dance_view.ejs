<!DOCTYPE html>
<html lang="en">
    
    <%- include('../../admin-layouts/top-header') %>
    <body class="hold-transition fixed sidebar-mini">
        <!-- Preloader -->
        <div class="preloader"></div>
		
        <!-- Site wrapper -->
        <div class="wrapper">
            <%- include('../../admin-layouts/header') %>
            
            <div class="content-wrapper">
				 
				<!-- page content -->
            	<div class="right_col" role="main">
					<div class="row">
            <% if(error.length>0){ %>
              <script>new Toasteur("top-right", 3000).error(" <%= error %>", 'Error!');</script>
           <% } %>
        
           <% if(success.length>0){ %>
              <script>new Toasteur("top-right", 3000).success(" <%= success %>", 'Success!');</script>
           <% } %>
                        <div class="col-sm-12">
							<div class="clearfix"></div>
                            <div class="panel panel-bd lobidrag">
                                
                                <div class="panel-body">
                                    <div class="col-sm-12">
                                        <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe- ADA</legend>
                                            <dl>
                                              <dt>Tribe Name</dt>
                                              <dd><%= tribe[0].tribe_name %></dd>
                                              <dt>Tribe About</dt>
                                              <dd><%= tribe[0].about_tribe %></dd>
                                          </dl>
                                        </fieldset>
                                    </div>
                                     
                                    <div class="col-sm-2 mt">
                                      <%- include('../../admin-layouts/tribe-left-panel') %> 
                                    </div>

                                     <div class="col-sm-10 mt">
                                        <fieldset class="the-fieldset">
                                          <%
                                          
                                          tribe_name                      = tribe[0].tribe_name? tribe[0].tribe_name : '';
                                          dance                           = tribe[0].dance_name ? tribe[0].dance_name : '';
                                          characters                      = tribe[0].characters_involved ? tribe[0].characters_involved : '';
                                          dancetypeid                     = tribe[0].dance_type_id ? tribe[0].dance_type_id : ''; 
                                          culturalorigin                  = tribe[0].cultural_origin ? tribe[0].cultural_origin : '';
                                          artistid                        = tribe[0].artist_id ? tribe[0].artist_id : '';
                                          instrumentsid                   = tribe[0].instruments_id ? tribe[0].instruments_id : '';
                                          choreography                    = tribe[0].choreography ? tribe[0].choreography : '';
                                          socialculturalsignificance      = tribe[0].social_cultural_significance ? tribe[0].social_cultural_significance : '';
                                          musicaccompanyingdance           = tribe[0].music_accompanying_dance ? tribe[0].music_accompanying_dance : '';
                                          historical                      = tribe[0].historical_religious_significance ? tribe[0].historical_religious_significance : '';
                                    
                                          %>
                                            <legend class="the-legend">Tribe - > Folk Dance</legend>
                                            <form  data-toggle="validator" method="post" name="add_folk_dance"  id="addFolKDance"  enctype="multipart/form-data"  action="/admin/tribe/master/traditions/dance/<%=tribeId%>/<%=danceId%>">
                                              <div class="col-sm-4">
                                                <label class="form-label required">Tribe(s) :</label>
                                                <select class="form-control form-select"  name="tribe_name" id="tribeName">
                                                  <option value="<%= tribe[0].tribe_id %>"><%= tribe[0].tribe_name %></option>
                                                 
                                                </select>
                                                </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Dance Name</label>
                                                    <input class="form-control" type="text" name="dance_name" value="<%=dance%>" id="danceName" placeholder="Enter Dance Name">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Character:</label>
                                                    <input class="form-control" type="text" name="character" value="<%=characters%>" id="character" placeholder="Enter Character">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Dance Type</label>
                                                    <input class="form-control" type="text" name="dance_type" value="<%=dancetypeid%>" id="danceType" placeholder="Enter Dance Type">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Region:</label>
                                                    <input class="form-control" type="text" name="region" value="<%=culturalorigin%>" id="region" placeholder="Enter Region Or Cultual Origin">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Coustumes</label>
                                                    <input class="form-control" type="text" name="coustumes" value="<%=artistid%>" id="coustumes" placeholder="Enter Coustumes or attire associated">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Music:</label>
                                                    <input class="form-control" type="text" name="music" value="<%=musicaccompanyingdance%>" id="music" placeholder="Enter Music Accompanying the Dance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Instrument:</label>
                                                    <input class="form-control" type="text" name="instrument" value="<%=instrumentsid%>" id="instrument" placeholder="Enter Instrument">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Steps:</label>
                                                    <input class="form-control" type="text" name="choreography" value="<%=choreography%>" id="choreography" placeholder="Enter Steps Or choreography">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Social:</label>
                                                    <input class="form-control" type="text" name="social" value="<%=socialculturalsignificance%>" id="social" placeholder="Enter Social Or Cultural Significance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Historical:</label>
                                                    <input class="form-control" type="text" name="historical" value="<%=historical%>" id="historical" placeholder="Enter Historical/religious Context and Significance">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label for="status" class="control-label">Is Folk</label>
                                                    <div class="radio_inline">
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="1" id="toast" required="" checked>
                                                            <label for="toast">Yes</label>
                                                        </div>
                                                        <div class="radio">
                                                            <input type="radio" name="is_folk" value="0" id="boost" required="">
                                                            <label for="boost">No</label>
                                                        </div>
                                                    </div>
                                                  </div>
                                                <div class="form-group pull-right mt">
                                                    <button type="submit" class="btn btn-cap m-r-5" onclick =" return Validate();">Submit</button>
                                                    <button type="submit" class="btn btn-warning">Cancel</button>
                                                </div>
                                            </form>
                                        </fieldset>
                                        <div class="mt"> 
                                          <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe - > Folk Dance List</legend>
                                          <div class="table-responsive">
                                            <table id="myTable" class="table card-table table-vcenter text-nowrap datatable">
                                              <thead>
                                                <tr>
                                                  <th>S No.</th>
                                                  <th>Tribe Name</th>
                                                  <th>Danc name</th>
                                                  <th>Character</th>
                                                  <th>Dance Type</th>
                                                  <th>Region</th>
                                                  <th>Costumes</th>
                                                  <th>Music</th>
                                                  <th>Instrument</th>
                                                  <th>Steps</th>
                                                  <th>Soccial</th>
                                                  <th>Historical</th>
                                                  <th>Image</th>
                                                  <th>Music</th>
                                                  <th>Video</th>
                                                  <th>Action</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                               
                                                  <%  
                                                  if(list.length>0)
                                                  { 
                                                   
                                                    var number= 1;
                                                    var del = '';
                                                    for (let l of list)
                                                      { %>
                                                        
                                                        <tr>
                                                          <td><%= number %></td>
                                                          <td><%= l.tribe_name %></td>
                                                          <td><%= l.dance_name %></td>
                                                          <td><%= l.characters_involved %></td>
                                                          <td><%= l.dance_type_id %></td>
                                                          <td><%= l.cultural_origin %></td>
                                                          <td><%= l.artist_id %></td>
                                                          <td><%= l.music_accompanying_dance %></td>
                                                          <td><%= l.instruments_id %></td>
                                                          <td><%= l.choreography %></td>
                                                          <td><%= l.social_cultural_significance %></td>
                                                          <td><%= l.historical_religious_significance %></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.dance_id %>"><span class="label label-pill label-info-outline m-r-15"><%= l.image %></span></a></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.dance_id %>"><span class="label label-pill label-warning-outline m-r-15"><%= l.audio %></span></a></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.dance_id %>"><span class="label label-pill label-danger-outline m-r-15"><%= l.video %></span></a></td>
                                                          <td>
                                                            <a href="/admin/tribe/master/traditions/dance/<%= l.tribe_id %>/<%= l.dance_id %>" class="btn btn-xs btn-success" aria-label=""  title="Edit Item">
                                                              <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a onclick="return checkConfirm('<%= l.dance_id  %>')"  class="btn btn-xs btn-danger" aria-label="" title="Delete Item">
                                                              <i class="fa fa-trash"></i>
                                                          </a>
                                                          </td>
                                                        </tr>
                  
                                                      <% number++; } 
                                                  }  %>
                                               
                                              </tbody>
                                            </table>
                                          </div>
                                        </fieldset>
                                     </div>
                                     
                                     </div>
                                     
                                </div>
							    		
                            </div>
                        </div>
                    </div>
				</div>
				<!-- /page content -->
               
            </div>
            <!-- footer content -->
				<%- include('../../admin-layouts/footer') %>
			<!-- /footer content -->
        </div> <!-- ./wrapper -->
    </body>
    <script type="text/javascript">
 
      function Validate()
      {
        
        var error = '';
        var tribeName   = $('#tribeName').val();
        var danceName   = $('#danceName').val();
        var character   = $('#character').val();
        var singer      = $('#singer').val();
        var genre       = $('#genre').val();
        var duration    = $("#duration").val();
        var lyrics      = $('#lyrics').val();
        var region      = $('#region').val();
        var social      = $('#social').val();
        var historical  = $('#historical').val();

        if(tribeName == '' || tribeName == null)
        {
          error+='Tribe Name Name is required\n';
        }
        if(danceName == '' || danceName == null)
        {
          error+='Dance Name is required\n';
        }
        if(character == '' || character == null)
        {
          error+='Character is required\n';
        }
        if(danceType == '' || danceType == null)
        {
          error+='Dance Type is required\n';
        }
        if(coustumes == '' || coustumes == null)
        {
          error+='Coustumes is required\n';
        }
        if(music == '' || music == null)
        {
          error+='Music is required\n';
        }
        if(instrument == '' || instrument == null)
        {
          error+='Instrument is required\n';
        }
        if(region == '' || region == null)
        {
          error+='Region is required\n';
        }
        if(choreography == '' || choreography == null)
        {
          error+='Choreography is required\n';
        } 
        if(social == '' || social == null)
        {
          error+='Social is required\n';
        }
        if(historical == '' || historical == null)
        {
          error+='Historical is required\n';
        }
        
        if(error != '')
        {
         swal({
          title: "Error",
          text: ""+error,
          type: "error",
          showCancelButton: true,
          confirmButtonClass: 'btn-danger',
        });
       }
       else
       {
         $('#addFolKDance').submit();
       }
     }
  </script>

</html>