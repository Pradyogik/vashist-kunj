<!DOCTYPE html>
<html lang="en">
    
    <%- include('../../admin-layouts/top-header') %>
    <body class="hold-transition fixed sidebar-mini">
        <!-- Preloader -->
        <div class="preloader"></div>
		
        <!-- Site wrapper -->
        <div class="wrapper">
            <%- include('../../admin-layouts/header') %>
            
            <div class="content-wrapper">
				 
				<!-- page content -->
            	<div class="right_col" role="main">
                <% if(error.length>0){ %>
                  <script>new Toasteur("top-right", 3000).error(" <%= error %>", 'Error!');</script>
               <% } %>
            
               <% if(success.length>0){ %>
                  <script>new Toasteur("top-right", 3000).success(" <%= success %>", 'Success!');</script>
               <% } %>
					<div class="row">
                        <div class="col-sm-12">
							<div class="clearfix"></div>
                            <div class="panel panel-bd lobidrag">
                                
                                <div class="panel-body">
                                    <div class="col-sm-12">
                                        <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe- ADA</legend>
                                            <dl>
                                              <dt>Tribe Name</dt>
                                              <dd><%= tribe[0].tribe_name %></dd>
                                              <dt>Tribe About</dt>
                                              <dd><%= tribe[0].about_tribe %></dd>
                                          </dl>
                                        </fieldset>
                                    </div>

                                    <div class="col-sm-2 mt">
                                      <%- include('../../admin-layouts/tribe-left-panel') %> 
                                    </div>

                                     <div class="col-sm-10 mt">
                                        <fieldset class="the-fieldset">
                                          <%
                                         
                                            tribe_name  = tribe[0].tribe_name? tribe[0].tribe_name : '';
                                            festival       = tribe[0].festival_name ? tribe[0].festival_name : '';
                                            celebrationdate   = tribe[0].celebration_date ? tribe[0].celebration_date : '';
                                            duration    = tribe[0].duration ? tribe[0].duration : '';
                                            rituals    = tribe[0].rituals_ceremonies_associated ? tribe[0].rituals_ceremonies_associated : ''; 
                                            typesacrificesmade       = tribe[0].type_sacrifices_made ? tribe[0].type_sacrifices_made : '';
                                            traditionalfood  = tribe[0].traditional_food ? tribe[0].traditional_food : '';
                                            dresses      = tribe[0].dresses_associated ? tribe[0].dresses_associated : '';
                                            decorations      = tribe[0].decorations_symbols? tribe[0].decorations_symbols : '';
                                            region  = tribe[0].region_cultural_origin ? tribe[0].region_cultural_origin : '';
                                            historical  = tribe[0].historical_religious_significance ? tribe[0].historical_religious_significance : '';
                                          %>
                                            <legend class="the-legend">Tribe - > Folk Festivals</legend>
                                            <form data-toggle="validator" method="post" name="add_folk_festival"  id="addFolkFestival"  enctype="multipart/form-data"  action="/admin/tribe/master/traditions/festivals/<%=tribeId%>/<%=festivalsId%>">
                                                <div class="col-sm-4">
                                                  <label class="form-label required">Tribe(s) :</label>
                                                    <select class="form-control form-select"  name="tribe_name" id="tribeName">
                                                      <option value="<%= tribe[0].tribe_id %>"><%= tribe[0].tribe_name %></option>
                                                    </select>
                                                </div>
                                                <div class="col-sm-4">
                                                    <label class="form-label required">Festivals Name:</label>
                                                    <input class="form-control" type="text" name="festivals_name" id="festivals_name" value="<%= festival%>" placeholder="Enter Festivals Name">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Celebration Date:</label>
                                                    <input class="form-control" type="date" name="celebration_date" id="celebration_date" value="<%= celebrationdate%>">
                                                  </div>
                                                  
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Duration:</label>
                                                    <input class="form-control" type="text" name="duration" id="duration" value="<%= duration%>" placeholder="Enter Duration" >
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Rituals Name:</label>
                                                    <input class="form-control" type="text" name="rituals" id="rituals" value="<%= rituals%>" placeholder="Enter Rituals Or Ceremonies Associated">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Sacrifices Type:</label>
                                                    <input class="form-control" type="text" name="sacrifices_type" id="sacrifices_type" value="<%= typesacrificesmade%>" placeholder="Enter Type(s) Of Sacrifices Made">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Traditional Food </label>
                                                    <input class="form-control" type="text" name="traditional_food" id="traditional_food" value="<%= traditionalfood%>" placeholder="Enter Traditional Food Or Dishes Associated">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Dresses Name:</label>
                                                    <input class="form-control" type="text" name="dresses_name" id="dresses_name" value="<%= dresses%>" placeholder="Enter Dresses Associated">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Decorations Name:</label>
                                                    <input class="form-control" type="text" name="decorations_name" id="decorations_name" value="<%= decorations%>" placeholder="Enter Decorations Or Symbols">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Region:</label>
                                                    <input class="form-control" type="text" name="region" id="region" value="<%= region%>" placeholder="Enter Region Or Cultual Origin">
                                                  </div>
                                                  <div class="col-sm-4">
                                                    <label class="form-label required">Historical:</label>
                                                    <input class="form-control" type="text" name="historical" id="historical"  value="<%= historical%>" placeholder="Enter Historical/religious Context and Significance">
                                                  </div>
                                                  
                                                <div class="col-sm-4">
                                                  <label for="status" class="control-label">Is Folk</label>
                                                  <div class="radio_inline">
                                                      <div class="radio">
                                                          <input type="radio" name="is_folk" value="1" id="toast" required="" checked>
                                                          <label for="toast">Yes</label>
                                                      </div>
                                                      <div class="radio">
                                                          <input type="radio" name="is_folk" value="0" id="boost" required="">
                                                          <label for="boost">No</label>
                                                      </div>
                                                  </div>
                                                </div>
                                                <div class="form-group pull-right ">
                                                    <button type="submit" class="btn btn-cap m-r-5">Submit</button>
                                                    <button type="submit" class="btn btn-warning">Cancel</button>
                                                </div>
                                            </form>
                                        </fieldset>
                                        <div class="mt"> 
                                          <fieldset class="the-fieldset">
                                            <legend class="the-legend">Tribe - > Folk Festivals List</legend>
                                          <div class="table-responsive">
                                            <table id="myTable" class="table card-table table-vcenter text-nowrap datatable">
                                              <thead>
                                                <tr>
                                                  <th>S No.</th>
                                                  <th>Tribe Name</th>
                                                  <th>Festivals</th>
                                                  <th>Celebration</th>
                                                  <th>Duration</th>
                                                  <th>Rituals</th>
                                                  <th>Sacrifices</th>
                                                  <th>Traditional Food</th>
                                                  <th>Dresses Name</th>
                                                  <th>Decorations Name</th>
                                                  <th>Region</th>
                                                  <th>Historical</th>
                                                  <th>Image</th>
                                                  <th>Music</th>
                                                  <th>Video</th>
                                                  <th>Action</th>
                                                </tr>
                                              </thead>
                                              <tbody>
                                                  <%  if(festivals.length>0)
                                                  { 
                                                    var number= 1;
                                                    var del = '';
                                                    for (let l of festivals)
                                                      { %>
                                                        <tr>
                                                          <td><%= number %></td>
                                                          <td><%= l.tribe_name %></td>
                                                          <td><%= l.festival_name %></td>
                                                          <td><%= formatDatedmy(l.celebration_date) %></td>
                                                          <td><%= l.duration %></td>
                                                          <td><%= l.rituals_ceremonies_associated %></td>
                                                          <td><%= l.type_sacrifices_made %></td>
                                                          <td><%= l.traditional_food %></td>
                                                          <td><%= l.dresses_associated %></td>
                                                          <td><%= l.decorations_symbols %></td>
                                                          <td><%= l.region_cultural_origin %></td>
                                                          <td><%= l.historical_religious_significance %></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.festival_id %>"><span class="label label-pill label-info-outline m-r-15"><%= l.image %></span></a></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.festival_id %>"><span class="label label-pill label-warning-outline m-r-15"><%= l.audio %></span></a></td>
                                                          <td><a href="/admin/tribe/master/folk-media/<%= categoryType %>/<%= l.tribe_id %>/<%= l.festival_id %>"><span class="label label-pill label-danger-outline m-r-15"><%= l.video %></span></a></td>
                                                          <td>
                                                            <a href="/admin/tribe/master/traditions/festivals/<%= l.tribe_id %>/<%= l.festival_id %>" class="btn btn-xs btn-success" aria-label=""  title="Edit Item">
                                                              <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a onclick="return checkConfirm('<%= l.festival_id  %>')"  class="btn btn-xs btn-danger" aria-label="" title="Delete Item">
                                                              <i class="fa fa-trash"></i>
                                                          </a>
                                                          </td>
                                                        </tr>
                  
                                                      <% number++; } 
                                                  }  %>
                                               
                                              </tbody>
                                            </table>
                                          </div>
                                        </fieldset>
                                         
                                     </div>
                                    </div>
                                     
                                </div>
							    		
                            </div>
                        </div>
                    </div>
				</div>
				<!-- /page content -->
               
            </div>
            <!-- footer content -->
				<%- include('../../admin-layouts/footer') %>
			<!-- /footer content -->
        </div> <!-- ./wrapper -->
    </body>

<script type="text/javascript">
  $(function() {
          $("#celebration_date").datepicker({ dateFormat: "yy-mm-dd" }).val()
  });
  
</script>
</html>