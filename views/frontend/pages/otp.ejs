<script>

    function validateLoginotp() {
        var otp = document.getElementById('otp').value;

        if (otp == '') {
            new Toasteur("top-right", 2000).error("Enter a valid OTP number", 'Error!');
            $('#otp').focus();
            return false;
        }

        if (otp.length > 6) {
            new Toasteur("top-right", 2000).error("Enter a valid  6 Gigits OTP number", 'Error!');
            $('#otp').focus();
            return false;
        }
        if (otp.length < 6) {
            new Toasteur("top-right", 2000).error("Enter a valid  6 Gigits OTP number", 'Error!');
            $('#otp').focus();
            return false;
        }
        else {

            $("#login").submit();

            return true;
        }

    }

</script>