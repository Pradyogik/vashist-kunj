<script>

    function validateLogin() {
        var mobile = document.getElementById('mobile').value;

        if (mobile == '') {
            new Toasteur("top-right", 2000).error("Enter a valid mobile number", 'Error!');
            $('#mobile').focus();
            return false;
        }

        if (mobile.length > 10) {
            new Toasteur("top-right", 2000).error("Enter a valid mobile number", 'Error!');
            $('#mobile').focus();
            return false;
        }
        if (mobile.length < 10) {
            new Toasteur("top-right", 2000).error("Enter a valid mobile number", 'Error!');
            $('#mobile').focus();
            return false;
        }
        else {

            $("#login").submit();

            return true;
        }

    }

</script>